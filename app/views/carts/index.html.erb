<div class="mt70" >
    <div class="col-md-12">
        <%= link_to(t('cart-clear'), clean_carts_path,
          method: :delete, class:"pull-right",
          style: "text-decoration: underline;",
          data:{ confirm:"你确定要清空整个购物车吗？" } ) %>
        <h2> <%= t('cart-index') %> </h2>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th colspan="2"><%= t('f-cart-product-info') %></th>
                    <th><%= t('f-cart-product-price') %></th>
                    <th><%= t('f-cart-product-quantity') %></th>
                    <th><%= t('f-cart-product-option') %></th>
                </tr>
            </thead>
            <tbody>
                <% current_cart.cart_items.each do |cart_item| %>
                    <tr>
                        <td>
                            <%= link_to product_path(cart_item.product) do %>
                                <% if cart_item.product.image.present? %>
                                    <%= image_tag(cart_item.product.image.thumb.url, class: "thumbnail") %>
                                <% else %>
                                    <%= image_tag("http://placehold.it/200x200&text=No Pic", class: "thumbnail") %>
                                <% end %>
                            <% end %>
                        </td>
                        <td>
                            <%= link_to(cart_item.product.title, product_path(cart_item.product)) %>
                        </td>
                        <td>
                            <%= cart_item.product.price %>
                        </td>
                        <td>
                          <div class="quantity-box">
                            <%= link_to("-", remove_quantity_cart_item_path(cart_item.product_id), method: :post) %>
                            <input class="quantity-input" type="text" value="<%= cart_item.quantity %>">
                            <%= link_to("+", add_quantity_cart_item_path(cart_item.product_id), method: :post) %>
                          </div>
                        </td>
                        <td>
                            <%= link_to cart_item_path(cart_item.product_id), method: :delete do %>
                                <i class="fa fa-trash"></i>
                            <% end %>
                        </td>
                    </tr>
                <% end %>
            </tbody>
        </table>
        <br>
        <div class="total clearfix">
            <span class="pull-right">
                <span>
                    <%= t('f-cart-total') %> <%= render_cart_total_price(current_cart) %> RMB
                    </span>
            </span>
        </div>
        <hr>
        <div class="checkout clearfix mb100">
            <%= link_to(t('btn-checkout'), checkout_carts_path, method: :post, class: "btn btn-lg btn-danger pull-right") %>
        </div>
    </div>
</div>
