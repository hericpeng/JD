<div class="categoryList">
  <div class="categoryList-item">课程</div>
  <div class="categoryList-item">工具</div>
  <div class="categoryList-item">书卷</div>
</div>

<div class="product-box ">
  <div class="container">
<% if @products.length > 0 %>
    <!--=== 商品列表 ===-->
    <div class="row ">
        <% @products.each_with_index do |product, index| %>
            <div class=" col-xs-12 col-sm-2 col-md-3 product-content wow fadeInUp" data-wow-delay="0.4s">
                <%= link_to product_path(product) do %>
                    <!-- 商品圖片 -->
                    <% if product.image.present? %>
                        <!-- 顯示第一張圖片 -->
                        <%= image_tag(product.image.thumb.url, class: "thumbnail") %>
                    <% else %>
                        <%= image_tag('http://placehold.it/200x200&text=No Pic', class: 'thumbnail') %>
                    <% end %>
                <% end %>
                <div class="product-info">
                    <!-- 收藏爱心按钮 -->
                    <% if !product.users.include?(current_user) %>
                      <%= link_to("",add_to_favorite_product_path(product),method: :post, class: "fa fa-heart") %>
                    <% else %>
                      <%= link_to("", quit_favorite_product_path(product),method: :post,  class: "fa fa-heart", style: "color:red;") %>
                    <% end %>
                    <!-- 商品名称 -->
                    <ul><%= link_to(product.title , product_path(product)) %></ul>
                    <!-- 商品价格 -->
                    <ul>￥<%= product.price %></ul>
                </div>
            </div>
        <% end %>
    </div>
<% else %>
    <div class="product-content">
        <h2><%= (t('no-product-data')) %></h2>
    </div>
<% end %>
</div>
</div>
