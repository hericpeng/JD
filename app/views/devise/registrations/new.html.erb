<html>
<body class="body01">

<script src="https://use.typekit.net/ayg4pcz.js"></script>
<script>try{Typekit.load({ async: true });}catch(e){}</script>

<br/><br/><br/>
<div class="container">
<h1 class="welcome text-center"> 知识猎人公会 </h1> <br/>
    <div class="card ps card-container">
    <h2 class='login_title text-center'>注册</h2>
    <hr>

    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= f.error_notification %>
        <div class="form-signin">
          <%= f.input :email, required: true, autofocus: true, label:"邮箱" %>
          <%= f.input :password, required: true, label:"密码", hint: ("至少#{@minimum_password_length}位字符" if @minimum_password_length) %>
          <%= f.input :password_confirmation, required: true, label:"密码确认" %>


          <button class="btn btn-lg btn-primary" type="submit">注册</button>
        </div><!-- /form -->
     <% end %>

    </div><!-- /card-container -->
</div><!-- /container -->

</body>
</html>
